{% extends 'base.html.twig' %}

{% block title %}Credit{% endblock %}

{% block body %}
    <h1>Credit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ credit.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ credit.amount }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ credit.status }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ credit.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ credit.createdAt ? credit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ credit.updatedAt ? credit.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_credit_index') }}">back to list</a>

    <a href="{{ path('app_credit_edit', {'id': credit.id}) }}">edit</a>

    {{ include('credit/_delete_form.html.twig') }}
{% endblock %}
