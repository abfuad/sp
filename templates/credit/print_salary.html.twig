{% extends 'print.html.twig' %}

{% block title %}
	{{app.request.server.get("SYSTEM_NAME")|title}}
{% endblock %}
{% block maintitle %}
	{{app.request.server.get("SYSTEM_NAME")|title}}
{% endblock %}
{% block body %}
	<center>
		<h2>
			<b>
				<u>
					TOWHID SCHOOL EMPLOYEE SALARY REPORT</u>
			</b>
		</h2>
	</center>
	<br>

	<table style="width:100%">
		<thead>
			<tr>

				<th>
					#

				</th>
				<th class="align-middle">
					Employee
				</th>
				<th class="align-middle">
					Phone
				</th>
				<th class="align-middle">
					AccountNumber
				</th>

				<th class="align-middle">
					Salary
				</th>
				<th class="align-middle">
					Penality Fee
				</th>

				<th class="align-middle">
					Credit
				</th>
				<th class="align-middle">
					Net
				</th>


			</tr>
		</thead>
		<tbody>

			{% set i = 1 %}
			{% set total = 0 %}
			{% for data in datas %}
				<tr>
					<td>
						{{ i }}
						{% set i = i+1 %}
					</td>
					<td>
						{{ data|title }}
					</td>
					<td>
						{{ data.userInfo.phone }}
					</td>
					<td>
						{{ data.userInfo.accountNumber}}
					</td>

					<td>
						{{ data.userInfo.salary }}
					</td>
					<td>
						{{ getUserPenalityFee(data) }}
					</td>
					<td>
						{{ getUserCredit(data) }}
					</td>

					<td>

						{% if data.userInfo.salary %}
							{{data.userInfo.salary-(getUserPenalityFee(data)+getUserCredit(data) )}}
							{% set total = total+ data.userInfo.salary-(getUserPenalityFee(data)+getUserCredit(data) ) %}
						{% endif %}
					</td>
				</tr>


			{% else %}
				<tr>
					<td colspan="5">
						no records found
					</td>
				</tr>
			{% endfor %}
            <tr>
                <td colspan="7">
            </td>
           
            <td> <h2>Total: {{total}}</h2></td>
            </tr>
		</tbody>
	</table>

{% endblock %}
