{% block title %}
	{{app.request.server.get("SYSTEM_NAME")|title}}
{% endblock %}
{% block maintitle %}
	{{app.request.server.get("SYSTEM_NAME")|title}}
{% endblock %}
{% block body %}
	<center>
		<h2>
			<b>
				<u>TOWHID SCHOOL STUDENT PAYMENT REPORT</u>
			</b>
		</h2>
	</center>
	<br>

	<table  style="width:100%" >
		<thead>
			<tr class="table-active">
				<th>#</th>
				<th>IDNumber</th>

				<th>FullName</th>
				<th>Sex</th>
				<th>Age</th>
				<th>Phone</th>
				<th>Grade</th>
				<th>Year</th>
				


				<th>Fee Type</th>


				<th>ReceiptNumber</th>
				<th>Amount</th>
				<th>IsPaid</th>


				{# <th >CreatedBy</th>
				                            <th >CreatedAt</th> #}


				{# <th >actions</th> #}
			</tr>
		</thead>
		<tbody>
            {% for data in datas %}
            <tr>
                <td>
                    {{loop.index}}

                </td>
                <td class="align-middle text-nowrap">{{ data.student.idNumber }}</td>

                <td class="align-middle text-nowrap">{{ data.student.getFullName|upper }}</td>
                <td class="align-middle">{{ data.student.sex }}</td>
                <td class="align-middle">{{ data.student.age }}</td>
                <td class="align-middle">{{ data.student.phone }}</td>
                <td class="align-middle">{{ data.registration.grade }}</td>


            <td class="align-middle">{{ data.registration.year }}</td>
        <td class="align-middle">{{ data.type }}</td>
                <td class="align-middle">{{ data.receiptNumber }}</td>
                <td class="align-middle"><span class="badge badge-info">{{ data.amount }}</span></td>

            <td class="align-middle">{% if data.receiptNumber and data.registration.isFree == 0 %}
        <span class="badge badge-success">YES</span>
        {% elseif data.registration.isFree and data.receiptNumber %}
    <span class="badge badge-info">YES(FREE)</span>
    {% elseif data.registration.isFree and data.receiptNumber is null %}
<span class="badge badge-info">NO(FREE)</span>

        {% else %}
    <span class="badge badge-danger">NO</span>

            {% endif %}</td>
            {# <td class="align-middle">{% if data.registration.isFree  %}
        <span class="badge badge-info">YES</span>
        {% else %}
    <span class="badge badge-danger">No</span>

            {% endif %}</td> #}



                {# <td class="align-middle">{{ data.createdBy }}</td> #}
                {# <td class="align-middle"><a href="{{ vich_uploader_asset(data, 'documentFile') }}" target="_blank"> document</a></td> #}

                {# <td class="align-middle">{{ data.createdAt ? data.createdAt|date('Y-m-d') : '' }}</td>
                <td class="project-actions text-right">
                    <a href="{{ path('app_student_show', {'id': data.id}) }}" title="view" class="btn btn-info btn-sm d-inline text-nowrap">
                        <i class="fa fa-eye mr-1"></i>View</a>
                    <a href="{{ path('app_student_edit', {'id': data.id}) }}" title="edit" class="btn btn-warning btn-sm mt-1">
                        <i class="fa fa-edit mr-1">Edit</i>
                    </a>


                </td> #}
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
	</tbody>
</table>

