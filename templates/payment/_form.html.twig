{{ form_start(form) }}
{{ form_errors(form) }}
{{ form_row(form._token) }}
<div class="card">
	<div class="card-header">

		<div class="card-header">
			<h5 class="card-title">{% trans %}Payment Information{% endtrans %}</h5>

			<div class="card-tools">
				<a href="{{path('app_payment_index')}}" class="btn btn-info btn-sm">{% trans %}back to list{% endtrans %}</a>


			</div>
		</div>


		<div class="card-body">
			<div class="row ">
				

				<div class="form-group mt-2 col-md-4 col-sm-6 ">
					{{form_label(form.student)}}
					{{ form_widget(form.student,{'attr':{'class':form_errors(form.student)? 'form-control is-invalid select2bs4':'form-control select2bs4','placeholder':"Enter..."}}) }}
					<div class="help-block text-danger">{{form_errors(form.student)}}</div>
				</div>
				<div class="form-group mt-2 col-md-4 col-sm-6 ">
					{{form_label(form.amount)}}
					{{ form_widget(form.amount,{'attr':{'class':form_errors(form.amount)? 'form-control is-invalid user_age':'form-control user_age','placeholder':"Enter..."}}) }}
					<div class="help-block text-danger">{{form_errors(form.amount)}}</div>
				</div>


				<div class="form-group mt-2 col-md-4 col-sm-6 ">
					{{form_label(form.receiptNumber)}}
					{{ form_widget(form.receiptNumber,{'attr':{'class':form_errors(form.receiptNumber)? 'form-control is-invalid ':'form-control ','placeholder':"Enter..."}}) }}
					<div class="help-block text-danger">{{form_errors(form.receiptNumber)}}</div>
				</div>


				


			</div>
		</div>
		<div class="card-footer float-right">
			<a href="{{app.request.headers.get('referer')}}" class="btn btn-info ">back</a>
			<button class="btn  btn-success ">{{ button_label|default('Pay') }}</button>

		</div>
	</div>


	{{ form_end(form,{render_rest: false}) }}
