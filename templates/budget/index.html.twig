{% extends 'base.html.twig' %}

{% block title %}Budget index{% endblock %}

{% block body %}
    <h1>Budget index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>Description</th>
                <th>PlanValue</th>
                <th>ActualValue</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for budget in budgets %}
            <tr>
                <td>{{ budget.id }}</td>
                <td>{{ budget.name }}</td>
                <td>{{ budget.code }}</td>
                <td>{{ budget.description }}</td>
                <td>{{ budget.planValue }}</td>
                <td>{{ budget.actualValue }}</td>
                <td>{{ budget.createdAt ? budget.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ budget.updatedAt ? budget.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_budget_show', {'id': budget.id}) }}">show</a>
                    <a href="{{ path('app_budget_edit', {'id': budget.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_budget_new') }}">Create new</a>
{% endblock %}
