{% extends 'base.html.twig' %}

{% block title %}Grade{% endblock %}

{% block body %}
    <h1>Grade</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ grade.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ grade.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ grade.code }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ grade.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ grade.createdAt ? grade.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ grade.updatedAt ? grade.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_grade_index') }}">back to list</a>

    <a href="{{ path('app_grade_edit', {'id': grade.id}) }}">edit</a>

    {{ include('grade/_delete_form.html.twig') }}
{% endblock %}
