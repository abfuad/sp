<div class="form-group ">
	<label class="col-sm-5 control-label no-padding-right">{{ form_label(form.amount,"Year fee") }}</label>
	{{ form_widget(form.amount,{'attr':{'class':'form-control'}}) }}
<div class="help-block text-danger">{{form_errors(form.amount)}}</div>
</div>

<div class="form-group">
	{% if not button_label is defined  %}
		<button class="btn btn-info">{{ button_label|default('Register') }}</button>
		<button class="btn  btn-primary " style="margin-right:20px;" type="reset">Reset</button>

	{% else %}
		<input type="hidden" name="edit" value="{{edit}}">
		<a href="{{ path(app.request.attributes.get('_route'),app.request.attributes.get('_route_params')) }}" class="btn btn-primary">
			Cancel
		</a>

		<button class="btn btn-success mr-2">{{ button_label|default('Register') }}</button>
	{% endif %}
</div>


{{ form_end(form) }}
