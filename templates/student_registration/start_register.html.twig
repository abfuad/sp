{% extends 'base.html.twig' %}

{% block title %}Start Student Registration
{% endblock %}

{% block body %}


	<div class="card ">

		<div class="card-header">
			<h5 class="card-title">{% trans %}Start Student Registration{% endtrans %}</h5>

			<div class="card-tools">
				<a href="{{path('app_payment_index')}}" class="btn btn-info btn-sm">{% trans %}back to list{% endtrans %}</a>


			</div>
		</div>


		<div class="card-body">
			<form action="" method="post" id="start">
				<input type="hidden" name="start" value="true">

				<div class="row ">

					<div class="form-group mt-2 col-md-3 col-sm-6 ">
						<label for="">Choose Year</label>
						<select name="year" id="" class="select2bs4 form-control" required>
							<option value="">Select  Year</option>
							{% for year in years %}
								<option value="{{year.id}}">{{year}}</option>

							{% endfor %}

						</select>

					</div>


					<div class="form-group mt-2 col-md-3 col-sm-6 ">
						<label for="">Choose Previous Grade</label>
						<select name="prevgrade" id="" class="select2bs4 form-control" required>
							<option value="">Select Grade</option>
							{% for grade in grades %}
								<option value="{{grade.id}}">{{grade}}</option>

							{% endfor %}
						</select>

					</div>
					<div class="form-group mt-2 col-md-3 col-sm-6 ">
						<label for="">Choose Current Grade</label>
						<select name="grade" id="" class="select2bs4 form-control" required>
							<option value="">Select Grade</option>
							{% for grade in grades %}
								<option value="{{grade.id}}">{{grade}}</option>

							{% endfor %}
						</select>

					</div>
					<div class="form-group mt-2 col-md-3 col-sm-6 ">
						<label for="">Choose Registration Type</label>
						<select name="fee-type" id="" class="select2bs4 form-control" required>
							<option value="">Select Registration Type</option>

							<option value="-1">Without Registration Fee</option>
							<option value="1">With Registration Fee</option>


						</select>


						{# <div class="form-group mt-2 col-md-4 col-sm-6 ">
																				{{form_label(form.phone)}}
																				{{ form_widget(form.phone,{'attr':{'class':form_errors(form.phone)? 'form-control is-invalid user_phone':'form-control user_phone','placeholder':"Enter..."}}) }}
																				<div class="help-block text-danger">{{form_errors(form.phone)}}</div>
																			</div> #}


					</div>
				</div>
			</form>
		</div>
		<div class="card-footer float-right">
			<a href="{{app.request.headers.get('referer')}}" class="btn btn-info ">back</a>
			<input type="submit" form="start" class="btn  btn-success float-right " value="Start"/>

		</div>
	</div>


{% endblock %}
