{% extends 'base.html.twig' %}

{% block title %}
	Asset Details index

{% endblock %}
{% block maintitle %}


	{{category}}
{% endblock %}
{% block breadcrumb %}

	<li class="breadcrumb-item ">
		<a href="{{ path('app_asset_index') }}">
			Asset
		</a>
	</li>
	<li class="breadcrumb-item ">
		show
	</li>

{% endblock %}

{% block body %}
<a href="{{path('app_asset_index')}}" class="btn btn-info  d-inline">{% trans %}back{% endtrans %}</a>

	<div class="row ">

		<div class="col-md-12 ">

			<div class="text-center mb-2">
				<button type="button" id="modalButton" class="btn btn-outline-primary" data-toggle="modal" data-target="#assetModal">
					<i class="fa fa-plus"></i>
					New Asset
				</button>
				{% if  (getTotalAsset(category)-getStockOutAsset(category)) > 0 %}
					
				
				<button type="button" id="creditButton" class="btn btn-outline-info" data-toggle="modal" data-target="#cardModal">
				<i class="fa fa-plus"></i>
				Issue Asset
			</button>
		{% endif %}
			</div>
			
			<div class="card card-info card-outline ">
				<div class="card-body">
					<h3 class="d-inline mr-1 ml-2">
						<strong>Name:
						</strong>
					</h3>
					<h3 class="d-inline mr-3 ml-2">
						<strong class="text-info">
							{{category}}</strong>
					</h3>
                    <h3 class="d-inline mr-3 ml-2">
						IsFixed:<strong class="text-info">
							{{category.isFixed?"YES":"NO"}}</strong>
					</h3>
                    <h3 class="d-inline mr-3 ml-2">
						Measure:<strong class="text-info">
							{{category.unit}}</strong>
					</h3>

					<h3 class="d-inline  mr-3">
						Quantity:
						<strong class="text-primary">
                    {{ getTotalAsset(category) }}</strong>
					</h3>
               <br>
					<h3 class="d-inline  mr-3 mt-5 ">
					StockIn:
						<strong class="text-danger">
                    {{ getTotalAsset(category)-getStockOutAsset(category) }}</strong>
					</h3>
                    {# <br> #}
                    <h3 class="d-inline  ">
						StockOut:
						<strong class="text-success">
                    {{ getStockOutAsset(category) }}</strong>
					</h3>


				</div>
			</div>
		</div>
	</div>

	<div class="card ">
		<div class="card-header">
			<h3 class="card-title">Asset Transaction</h3>
            
            <div class="card-tools">
            <button type="button" class="btn btn-secondary btn-xs" >
                <i class="fas fa-download"></i> PDF
            </button>
        </div>
		</div>
        

		<div class="card-body">


			<div class="table-responsive">
				<table class="table table-hover  projects table-bordered">
					<thead>
						<tr>
							<th>
								#
							</th>

							<th class="align-middle">Quantity</th>



							<th class="align-middle">Date</th>
                        <th class="align-middle">CreatedBy</th>

							<th class="align-middle">
								Action</th>


						</tr>
					</thead>
					<tbody>
						{% set i = 1 %}
						{% for data in category.assets|sort|reverse %}
							<tr>
								<td>
									{{ i }}
									{% set i = i+1 %}
								</td>
							
								<td>{{ data.quantity}}
								</td>


								
								<td>{{ data.createdAt|date('d-m-y')}}
								</td>
                                <td>
									{{data.createdBy|title}}

								</td>
								<td>
                                    <form class="d-inline" method="post">
                                    <input type="hidden" name="edit" value="{{data.id}}">
                                    <button class="btn btn-sm btn-info" title="Edit">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                </form>


                                <form class="d-inline" method="post"  onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="remove" value="{{data.id}}">

                                    <input type="hidden" name="_method" value="DELETE">
                                    <input
                                    type="hidden" name="_token" value="{{ csrf_token('delete' ~ data.id) }}">
                                    <button class="btn btn-sm btn-danger" title="Delete">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>


                            </td>
                                </td>


							</tr>
						{% else %}
							<tr>
								<td colspan="5">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

			</div>
		</div>
	</div>
	{% include "asset/user_card.html.twig" %}

	

	 {% if edit or card_edit  %}
		{% set button_label = 'Update' %}
	{% endif %}
	
	{% if card_form is defined %}
	{% include "asset/user_card_modal.html.twig" %}
	{% endif %}
	
	{% if form is defined %}
	{% include "asset/asset_modal.html.twig" %}
	{% endif %} 
	

{% endblock %}
{% block javascripts %}
	<script>
		$(function () { // Initialize Select2 Elements
$('.select2').select2({theme: 'bootstrap4'});

{% if edit  %}
$('#modalButton').trigger('click');
    
{% endif %}
{% if card_edit  %}
$('#creditButton').trigger('click');
    
{% endif %}

});
	</script>

{% endblock %}
